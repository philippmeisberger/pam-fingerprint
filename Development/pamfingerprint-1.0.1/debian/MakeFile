#!/bin/sh

if ( test "$USER" != "root" ); then
    echo "This script must executed as root!"
    exit 1
fi

cp -r ./source/ ./src_temp/
chown 1000:1000 ./src_temp/var/log/pamfingerprint.log

dpkg --build ./src_temp/ ./pamfingerprint_1.0.1.deb

rm -R ./src_temp/

chown 1000:1000 ./pamfingerprint_1.0.1.deb